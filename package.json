{
  "name": "onomad",
  "version": "2.0.0",
  "description": "Time formatting optimized for Serbian language",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun run build:core && bun run build:vue && bun run build:types",
    "build:core": "bun build src/index.ts --outdir dist --target node --sourcemap=external",
    "build:vue": "bun build src/vue/index.ts --outdir dist/vue --target node --sourcemap=external --external vue",
    "build:types": "tsc --project tsconfig.build.json",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "serbian",
    "serbian-language",
    "time-formatting",
  ],
  "author": "Dejan Simic <desimic@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dejan/onomad.git"
  },
  "homepage": "https://github.com/dejan/onomad#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}